<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title="@string/location_label"
        android:key="@string/location_key"
        android:defaultValue="@string/location_default"
        android:inputType="text"
        android:singleLine="true"
        />

    <ListPreference
        android:title="@string/units_label"
        android:key="@string/units_key"
        android:defaultValue="@string/unit_default"
        android:dialogTitle="@string/units_label"
        android:entries="@array/unit_names"
        android:entryValues="@array/unit_names"
        />


</PreferenceScreen>
